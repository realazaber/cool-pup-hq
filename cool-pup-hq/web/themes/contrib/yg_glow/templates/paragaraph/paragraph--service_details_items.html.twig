<!-- Services Details Items -->
{% if content.field_style[0]['#markup'] == 0 %}
	<div class="row row-bottom-padded-lg" >
		<div class="col-md-3 animate-box">
			<div class="fh5co-icon"><i class="{{ content.field_icons.0 }}"></i></div>
		</div>
		<div class="col-md-8 col-md-push-1 animate-box">
			<h2>{{ content.field_title.0 }}</h2>
			{{ content.field_body.0 }}
			<ul>
				{{ content.field_feature }}
			</ul>
		</div>
	</div>
{% else %}
	<div class="row row-bottom-padded-lg">
		<div class="col-md-3 col-md-push-8 animate-box">
			<div class="fh5co-icon"><i class="{{ content.field_icons.0 }}"></i></div>
		</div>
		<div class="col-md-7 col-md-pull-3 animate-box">
			<h2>{{ content.field_title.0 }}</h2>
			{{ content.field_body.0 }}
			<ul>
				{{ content.field_feature }}
			</ul>
		</div>
	</div>
{% endif %}
<!-- Services Details Items End-->
